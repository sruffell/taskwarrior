FROM ubuntu:18.04

# Setup language environment
ENV LC_ALL en_US.UTF-8
ENV LANG en_US.UTF-8
ENV LANGUAGE en_US.UTF-8

WORKDIR /root/code/

RUN apt-get update \
  && apt-get install -y \
    build-essential \
    cmake \
    git \
    libgnutls28-dev \
    libfaketime \
    python \
    uuid-dev \
  && rm -fr /var/lib/apt/lists/*

CMD ["bash", "-c", "/source/test/scripts/run_centos7_test.sh"]
